#!/usr/local/bin/pug installer

# Args: name of dependency
pugfile_text() {
  echo "set runtimepath^=$SOURCE_DIR/vim/$1"
}

source_help_text() {
 cat <<-EOF
Make sure this is added to your .vimrc file:

filetype off
let __pug_path = expand("$SOURCE_DIR/vim/pug")
execute 'source '.fnameescape(__pug_path)
filetype plugin indent on
EOF
}

# Args: name of dependency
is_already_installed() {
  grep -q "/$1\$" "$SOURCE_DIR/vim/pug"
}
