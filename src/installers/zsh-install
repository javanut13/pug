#!/usr/local/bin/pug installer

# Env: SOURCE_DIR

# Args: name of dependency
pugfile_text() {
  echo "source '$SOURCE_DIR/zsh/$name/$name.zsh'"
}

source_help_text() {
 cat <<-EOF
Make sure this is in your .zshrc file:

source '$SOURCE_DIR/zsh/pug'
EOF
}

# Args: name of dependency
is_already_installed() {
  grep -q "/$1\$" "$SOURCE_DIR/zsh/pug"
}
